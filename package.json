{
  "name": "macdown-win",
  "version": "0.1.0",
  "private": true,
  "description": "MacDown for Windows - Modern Markdown Editor",
  "author": "MacDown Win Team",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @macdown/renderer dev",
    "dev:electron": "cross-env DEV=true pnpm --filter @macdown/main start",
    "build": "pnpm -r build",
    "build:electron": "pnpm --filter @macdown/main build && pnpm --filter @macdown/renderer build",
    "start": "pnpm --filter @macdown/main start",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rimraf apps/**/dist packages/**/dist node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
