{
  "name": "@macdown/main",
  "version": "0.1.0",
  "private": true,
  "description": "MacDown for Windows - Electron Main Process",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc && tsc -p src/preload/tsconfig.json",
