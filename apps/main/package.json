    "start": "electron ./dist/index.js",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2"
  }
}
